<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.widget.EditText
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="Clip Title"
        android:maxLength="100"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <android.widget.Button
        android:id="@+id/upload"
        android:text="Upload a Video"
        android:layout_height="48dp"
        android:layout_width="0dp"
        android:onClick="retrieveMedia"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Preview"
        android:textSize="18dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/upload"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/preview_block"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:text="Preview"
        android:textAlignment="center"
        android:paddingTop="80dp"
        android:textSize="20dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        app:layout_constraintTop_toBottomOf="@+id/preview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <fragment
        android:name="com.example.michaelcolomb.clipscroller.SubmissionActivity$ClipFragment"
        android:id="@+id/clip_list_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/preview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:id="@+id/submit_holder"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="56dp"
            android:text="Cancel"
            android:onClick="cancel"/>

        <Button
            android:id="@+id/final_submit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
            android:text="Submit"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:onClick="submit"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>